<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <% if actions && @align == :right %>
    <%= actions %>
  <% end %>
  <%= render Primer::BaseComponent.new(tag: :ul, classes: "UnderlineNav-body list-style-none") do %>
    <%= body %>
  <% end %>
  <% if actions && @align == :left %>
    <%= actions %>
  <% end %>
<% end %>
