<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <%= render summary.component do %>
    <%= summary.content %>
  <% end %>
  <% if body.omit_wrapper? %>
    <%= body.content %>
  <% else %>
    <%= render body.component do %>
      <%= body.content %>
    <% end %>
  <% end %>
<% end %>
